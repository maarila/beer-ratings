<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery_id %>
</p>

<% if @beer.ratings.empty? %>
  <p>No ratings yet!</p>
<% else %>
  <p>Has <%= pluralize(@beer.ratings.count, 'rating') %>, average <%= round(@beer.average_rating) %></p>
<% end %>

<% if current_user %>
  <h4>give a rating:</h4>

  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    <div>score: <%= f.number_field :score %>
    <%= f.submit class:"btn btn-primary" %></div>
  <% end %>
<% end %>

<%= edit_and_destroy_buttons(@beer) %>
